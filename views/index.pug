extends layout

block content
  form(action="/tasks/add", method="post")
    label(for="title")
      | Tytuł
    br
    input(type="text" id="title" name="title")
    <br>
    label(for="desc")
      | Opis zadania
    br
    input(type="textarea" id="desc" name="desc")
    br
    input(type="submit", value="Dodaj")

    table
        tr
          th(scope= "col") Tytuł
          th(scope= "col") Opis zadania
          th(scope= "col") Data dodania
        each task in tasks
          tr
            td= task.title
            td= task.desc
            td= task.timestamp